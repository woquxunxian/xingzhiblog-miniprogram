<view style="height: 100rpx;"></view>

<view class="content">
  <view class="left">
    <block wx:for="{{note}}" wx:key="">
      <template is="item" data="{{...item}}" 
                wx:if="{{index % 2 == 0}}"></template>
    </block>
  </view>
  <view class="right">
    <block wx:for="{{note}}" wx:key="">
      <template is="item" data="{{...item}}" 
                wx:if="{{index % 2 == 1}}"></template>
    </block>
  </view>
</view>


<template name="item">
  <view class="item shadow-warp" bindtap="">
    <image class="item-img" src="{{url}}" mode="widthFix"></image>
    <view class="item-title-box">
      <text class="item-title">{{title}}</text>
    </view>
    <view class="name">
      <image class="item-ava" src="{{avatar}}"></image>    
      <text class="name-title">{{name}}</text>
      <view class="heart_">
        <text class="cuIcon-likefill lg text-red"></text>
        <text>{{heart_num}}</text>
        <text class="cuIcon-likefill lg text-red"></text>
        <text>{{heart_num}}</text>
      </view>
    </view>
  </view>
</template>
